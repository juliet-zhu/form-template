/* Vars */
//form-control
$form-control-background-color = #fff
$form-control-border-color = #82807c
$form-control-border-radius = 0
$form-control-height = 34px
//success,error,warning
$success-border-color = #3c763d
$warning-border-color = #8a6d3b
$error-border-color = #a94442
$success-color = #3c763d
$warning-color = #8a6d3b
$error-color = #a94442
//btn
$btn-border-radius = 0
//btn-custome
$btn-custome-background = url(../images/btn-bg.jpg) left top repeat-x
$btn-custome-color = #fff
//login-exemple
$input-with-icon-background = #fff
$input-with-icon-glyphicon-color = #606060
$input-with-icon-font-size = 12px
$btn-full-background-color = #d16036
$btn-full-color = #fff
$btn-full-hover-color = #fff
$btn-full-hover-background-color = #EB7043
//.need
$need-color = #a94442


/* Mixins */
//margin
for i in (0..100)
  .m{i}
    margin i*1px
  .ml{i}
    margin-left i*1px
  .mr{i}
    margin-right i*1px
  .mb{i}
    margin-bottom i*1px
  .mt{i}
    margin-top i*1px
//padding
for i in (0..100)
  .p{i}
    padding i*1px
  .pl{i}
    padding-left i*1px
  .pr{i}
    padding-right i*1px
  .pb{i}
    padding-bottom i*1px
  .pt{i}
    padding-top i*1px


/* Global */
body
  background-color #f1f1f1
.wrapper
  margin-bottom 60px
hr
  border-top 1px solid #ccc
.title
  margin-top 40px
//form-template
.form-control
  border-radius $form-control-border-radius
  background-color $form-control-background-color
  border 1px solid $form-control-border-color
  height $form-control-height
.success
  color $success-color
  border-color $success-border-color
.warning
  color $warning-color
  border-color $warning-border-color
.error
  color $error-color
  font-size 12px
  border-color $error-border-color
.highlight-success
  border 1px solid $success-border-color!important
.highlight-error
  border 1px solid $error-border-color!important
.highlight-warning
  border 1px solid $warning-border-color!important
.btn
  border-radius $btn-border-radius
.btn-custome
  background $btn-custome-background
  color $btn-custome-color
  &:hover
    color $btn-custome-color
.need
  color $need-color

//login-example
.group
  min-height 55px
.input-with-icon
  width 100%
  background $input-with-icon-background
  border 1px solid $form-control-border-color
  padding 5px
  .glyphicon
    color $input-with-icon-glyphicon-color
  input 
    border 0
    outline 0
    font-size $input-with-icon-font-size
  &.error
    border 1px solid $error-border-color
  &.success
    border 1px solid $success-border-color
  &.warning
    border 1px solid $warning-border-color
    
.btn-full
  width 100%
.btn-orange
  background-color $btn-full-background-color
  color $btn-full-color
  font-weight bolder
  text-shadow 0 0 3px #000
  &:hover
    color $btn-full-hover-color
    background-color $btn-full-hover-background-color

//sigin-example
.note
  width 25%
  display inline-block
  font-size 12px
  color #8a6d3b
@media(max-width:767px)
  .form-group
    min-height 85px
    margin-bottom 0
    label
      padding 0 15px
  .note
    width 100%
    padding 0 15px


  
  

