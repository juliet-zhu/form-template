extends template/base
block vars
  - var page = "login"
  - BASEURL = ".."
block content
  .container
    .row.title
      .col-sm-12
        h3 登录表单
    .row
      hr
      .col-sm-12
        #error_tip
          ul
            li(field="sign_id") 用户名不能为空
            li(field="password") 邮箱不能为空
      .col-sm-4
        form(role='form')#login-form
          .h4 登录**
          .form-group(style="min-height:55px")
            .input-with-icon
              span.glyphicon.glyphicon-user
              input(type='text', placeholder='用户名/手机号/邮箱',name='sign_id',required, autocomplete="off")
          .form-group
            .input-with-icon
              span.glyphicon.glyphicon-lock
              input(type='password', placeholder='密码',name='password', required, autocomplete="off")
          .form-group
            button.btn.btn-full.btn-orange(type='submit') 登&nbsp;&nbsp;录
            a(href="#").pull-left.mt10 找回密码
            a(href="#").pull-right.mt10 注册
block js
  script(src="../js/components/jquery.validate.js") 
  script(src="../js/components/login.js")
  script(src="../js/components/tools.js")
  script.
    $(document).ready(function(){ 
      window.tools.getTips('#error_tip');
    }); 
