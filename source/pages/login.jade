extends template/base
block vars
  - var page = "login"
  - BASEURL = ".."
block content
  .container
    .row.title
      .col-sm-12
        h3 登录表单
    .row
      hr
      .col-sm-4
        form(role='form')#login-form
          .h4 登录**
          .group
            .input-with-icon
              span.glyphicon.glyphicon-user
              input(type='text', placeholder='用户名/手机号/邮箱',name='username',required, autocomplete="off")
          .group
            .input-with-icon
              span.glyphicon.glyphicon-lock
              input(type='password', placeholder='密码',name='password', required, autocomplete="off")
          .form-group
            button.btn.btn-full(type='submit') 登&nbsp;&nbsp;录
            a(href="#").pull-left.mt10 找回密码
            a(href="#").pull-right.mt10 注册
block js
  script(src="../js/components/jquery.validate.js")
  script(src="../js/components/login.js")

